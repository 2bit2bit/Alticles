<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/create-article.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <form class="form" action="/edit-article/<%= article._id%>" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div>   
                <input type="text" name="title" id="title" placeholder="Add Title" value="<%= article.title %>" >
            </div>
            <div>   
                <input type="text" name="description" id="description" placeholder="Add a short description" value="<%= article.description %>">
            </div>
            <div>
                <textarea name="body" id="article" placeholder="Tell your story..."> <%= article.body %></textarea>           
            </div>
            <div>   
                <input type="text" name="tags" id="tags" placeholder="Add tags, saperate with comma (,)" value="<%= article.tags %>">
            </div>
            <!-- <div>
                <label for="cover-image"> Upload cover photo: </label>
                <input type="file" id="cover-image" name="cover-image">
               
            </div> -->

            <div class="btns">
            <button class="btn" type="submit">Update</button>
            </div>
            
        </form>
    </main>

<%- include('../includes/end.ejs') %></body>