<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/create-article.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <form class="form" action="/create-article" method="POST">
            
            <div>   
                <input type="text" name="title" id="title" placeholder="Add Title" >
            </div>
            <div>   
                <input type="text" name="description" id="description" placeholder="Add a short description">
            </div>
            <div>
                <textarea name="body" id="article" placeholder="Tell your story..."></textarea>           
            </div>
            <div>   
                <input type="text" name="tags" id="tags" placeholder="Add tags, saperate with comma (,)">
            </div>

            <!-- add check box for publihs immediately -->
            <div class="publish-chkbox">
                <label for="publish">Publish immediately: </label>
                <input type="checkbox" name="publish" id="publish">
            </div>
            <div class="btns">
            <button class="btn" type="submit">Save draft</button>
            </div>
            
        </form>
    </main>

<%- include('../includes/end.ejs') %></body>